@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home page";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}


<head>
    <meta charset="UTF-8">
    <title>Porsche Dealership</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <!-- Hero Section -->
    <section class="relative bg-black text-white h-96 flex items-center justify-center bg-cover bg-center" style="background-image: url('/images/test.jpg');">
        <div class="bg-black bg-opacity-50 p-10 rounded">
            <h1 class="text-5xl font-bold uppercase">Porsche Exports</h1>
            <p class="text-xl mt-2">Limited Edition</p>
        </div>
    </section>

    <!-- Search Section -->
<form method="get">
    <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Search by model..." />

    <label><input type="checkbox" name="SelectedOptions" value="Sun Roof" @(Model.SelectedOptions.Contains("Sun Roof") ? "checked" : "") /> Sun Roof</label>
    <label><input type="checkbox" name="SelectedOptions" value="4 Wheel Drive" @(Model.SelectedOptions.Contains("4 Wheel Drive") ? "checked" : "") /> 4 Wheel Drive</label>
    <label><input type="checkbox" name="SelectedOptions" value="Low Miles" @(Model.SelectedOptions.Contains("Low Miles") ? "checked" : "") /> Low Miles</label>
    <label><input type="checkbox" name="SelectedOptions" value="Power Windows" @(Model.SelectedOptions.Contains("Power Windows") ? "checked" : "") /> Power Windows</label>
    <label><input type="checkbox" name="SelectedOptions" value="Navigation" @(Model.SelectedOptions.Contains("Navigation") ? "checked" : "") /> Navigation</label>
    <label><input type="checkbox" name="SelectedOptions" value="Heated Seats" @(Model.SelectedOptions.Contains("Heated Seats") ? "checked" : "") /> Heated Seats</label>

    <button type="submit"
        style="background-color: blue; color: white; border: none; padding: 0.40rem 1.5rem; border-radius: 6px; font-size: 1rem; cursor: pointer; box-shadow: 0 2px 5px rgba(0,0,0,0.2); transition: background-color 0.3s;">
    🔍 Search
</button>
</form>

        <!-- Inventory Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6"> 
             @foreach (var car in Model.Cars) 
             { 
                 <div class="relative bg-white rounded-lg overflow-hidden shadow-lg"> 
                     <div class="h-48 bg-cover bg-center" style="background-image: url('@(car.ImagePath ?? "/images/test_911.jpg")');></div> 
                     <div class="p-4"> 
                         <h2 class="text-2xl font-bold">@car.Model</h2> 
                         <p class="text-gray-600">@car.Year • @car.Color</p> 
                         <p class="text-gray-800 font-bold mt-2">$@String.Format("{0:N0}", car.Price)</p> 
                         <p class="text-gray-500 text-sm">@car.Mileage miles</p> 
                     </div> 
                 </div> 
             }
         </div>

    </section>

</body>


