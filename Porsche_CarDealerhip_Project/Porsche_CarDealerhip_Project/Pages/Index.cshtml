  @*           <p class="text-xl mt-2">London Edition</p> *@
  @*       </div> *@
  @*   </section>   *@

<header class="bg-white shadow-md p-6 flex flex-col items-center justify-center text-center">
    <img src="/images/porsche-logo.png" alt="Porsche Logo" class="h-16 mb-2">
    @* <h1 class="text-3xl font-semibold text-gray-800">Porsche Dealership</h1> *@
</header>

  <section class="relative h-screen overflow-hidden">
    <video autoplay muted loop class="absolute w-full h-full object-cover">
        <source src="/videos/porsche.mp4" type="video/mp4">
    </video>
    <div class="absolute inset-0 bg-black bg-opacity-40 flex flex-col items-center justify-center text-white text-center p-6">
        @* <h1 class="text-5xl font-bold">Welcome to Porsche London</h1> *@
        @* <p class="text-xl mt-2">Drive the Future</p> *@
    </div>
</section>

    <!-- Search Section -->
<form method="get" class="p-6 bg-white rounded-lg shadow-lg max-w-4xl mx-auto mt-6 space-y-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
        <input type="text" name="SearchTerm" value="@Model.SearchTerm"
               class="p-3 border rounded-md" placeholder="Search by model..." />

        @foreach (var option in new[] { "Sun Roof", "4 Wheel Drive", "Low Miles", "Power Windows", "Navigation", "Heated Seats" })
        {
            <label class="flex items-center space-x-2">
                <input type="checkbox" name="SelectedOptions" value="@option"
                       @(Model.SelectedOptions.Contains(option) ? "checked" : "") />
                <span>@option</span>
            </label>
        }
    </div>
    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded shadow">
        Search
    </button>
</form>

        <!-- Inventory Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6"> 
             @foreach (var car in Model.Cars) 
             { 
                 <div class="relative bg-white rounded-lg overflow-hidden shadow-lg"> 
                     <div class="h-48 bg-cover bg-center" style="background-image: url('@(car.ImagePath ?? "/images/test_911.jpg")');></div> 
                     <div class="p-4"> 
                         <h2 class="text-2xl font-bold">@car.Model</h2> 
                         <p class="text-gray-600">@car.Year • @car.Color</p> 
                         <p class="text-gray-800 font-bold mt-2">$@String.Format("{0:N0}", car.Price)</p> 
                         <p class="text-gray-500 text-sm">@car.Mileage miles</p> 
                     </div> 
                 </div> 
             }
         </div>

    </section>

</body>


