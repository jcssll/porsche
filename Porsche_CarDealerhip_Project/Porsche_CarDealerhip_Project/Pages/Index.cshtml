@page
@model IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home page";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}


<head>
    <meta charset="UTF-8">
    <title>Porsche Dealership</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <!-- Hero Section -->
  @* <section class="relative bg-black text-white h-96 flex items-center justify-center bg-cover bg-center" style="background-image: url('/images/test.jpg');"> *@
  @*       <div class="bg-black bg-opacity-50 p-10 rounded"> *@
